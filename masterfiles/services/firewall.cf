bundle agent firewall
{
  vars:
	"match_package" slist => {"iptables"};

  packages:
	"$(match_package)"
	package_module => zypper,
	policy => "present";
  services:
      "firewalld" service_policy => "stop";

  files:
	"/etc/sysconfig/iptables"
	copy_from => local_cp("/var/cfengine/masterfiles/files/sysconfig_iptables");
}
